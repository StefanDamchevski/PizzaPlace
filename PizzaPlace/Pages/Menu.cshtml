@page
@model PizzaPlace.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

@if(Model.MenuViewModels.Count == 0)
{
    <p>No Menu Items To show</p> 
}
else
{
<div class="row">
    @foreach (var item in Model.MenuViewModels)
    {
        <div class="col-md-3">
            <div class="card">
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Price: @item.Price</p>
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>
}