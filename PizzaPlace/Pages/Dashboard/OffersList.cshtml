@page
@model PizzaPlace.Pages.Dashboard.OffersListModel
@{
    ViewData["Title"] = "OffersList";
    Layout = "_LayoutDashboard";
}

<h1 style="text-align:center">OffersList</h1>


<div class="container">
    <a asp-page="CreateOffer" class="btn btn-secondary">Create Offer</a>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>DateCreated</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var offer in Model.Offers)
            {
                <tr>
                    <td>@offer.Title</td>
                    <td>@offer.DateCreated.ToString("dd MMMM yyyy")</td>
                    <td>
                        <a asp-page="EditOffer" asp-route-id="@offer.Id">Edit</a> | 
                        <a asp-page-handler="DeleteOffer" asp-route-id="@offer.Id" onclick="return confirm('Are you sure you want to delete @offer.Title?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
